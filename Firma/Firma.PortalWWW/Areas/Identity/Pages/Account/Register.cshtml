@page
@model RegisterModel
@{
    ViewData["Title"] = "Rejestracja";
}

<h1 class="text-center my-4">@ViewData["Title"]</h1>

<div class="d-flex justify-content-center">
    <div class="col-md-6 col-lg-5">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2 class="text-center mb-3">Utwórz nowe konto</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-group mb-3">
                <label asp-for="Input.Imie"></label>
                <input asp-for="Input.Imie" class="form-control" />
                <span asp-validation-for="Input.Imie" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Input.Nazwisko"></label>
                <input asp-for="Input.Nazwisko" class="form-control" />
                <span asp-validation-for="Input.Nazwisko" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" type="password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.Password">Hasło</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" type="password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.ConfirmPassword">Potwierdź hasło</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Zarejestruj się</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    /* Przycisk */
    #registerSubmit {
        background-color: #F5AA1C;
        border-color: #F5AA1C;
        color: white;
    }

        #registerSubmit:hover {
            background-color: #e59b19;
            border-color: #e59b19;
        }

    /* Linki */
    a {
        color: #404040;
        text-decoration: none;
    }

        a:hover {
            color: #F5AA1C;
            text-decoration: underline;
        }
</style>
