@page
@model LogoutModel
@{
    ViewData["Title"] = "Wylogowanie";
}

<header class="text-center my-5">
    <h1>@ViewData["Title"]</h1>
    @{
        if (User.Identity?.IsAuthenticated ?? false)
        {
            <form class="d-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="btn btn-outline-primary mt-3">Kliknij tutaj, aby się wylogować</button>
            </form>
        }
        else
        {
            <p class="mt-3">Pomyślnie wylogowano z aplikacji.</p>
        }
    }
</header>
