<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Volitx</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light border-bottom shadow-sm">
            <div class="container-fluid">
           
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">Volitx</a>

             
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                @await Html.PartialAsync("Odnosniki", (IEnumerable<Firma.Data.Data.CMS.Strona>)ViewBag.ModelStrony)
               
            </div>
        </nav>
    </header>

    <section id="slider" class="mb-5 ">
        @await Html.PartialAsync("Banner", (IEnumerable<Firma.Data.Data.CMS.Baner>)ViewBag.ModelBaner)
    </section>
    <main>
        @RenderBody()
    </main>
    <footer class="text-center text-lg-start mt-4 border-top shadow-sm">
        <div class="container p-4">
            <div class="row">
                <div class="col-lg-4 col-md-6 mb-4 mb-md-0">
                    <h5>O nas</h5>
                    <p>Volitx to najlepsze miejsce na zakupy online z szerokim wyborem produktów.</p>
                </div>
                <div class="col-lg-4 col-md-6 mb-4 mb-md-0">
                    <h5>Przydatne linki</h5>
                    <ul class="list-unstyled mb-0">
                        <li><a asp-area="" asp-controller="Home" asp-action="Privacy">Polityka prywatności</a></li>
                        <li><a asp-area="" asp-controller="Home" asp-action="Regulamin">Regulamin</a></li>
                        <li><a href="#">Pomoc techniczna</a></li>
                    </ul>
                </div>
                <div class="col-lg-4 col-md-12 mb-4 mb-md-0">
                    <h5>Kontakt</h5>
                    <p>Email: kontakt@Volitx.com<br>Telefon: +48 123 456 789</p>
                </div>
            </div>
            <div class="text-center p-3 border-top mt-3">
                © 2025 Volitx. Wszelkie prawa zastrzeżone.
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
