@model IEnumerable<Firma.Data.Data.Sklep.Zamowienie>

<div class="col-lg-8">
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body">
            <h4 class="fw-bold mb-3">Ostatnie zamówienia</h4>
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Data</th>
                            <th>Adres</th>
                            <th>Status</th>
                            <th>Towar</th>
                            <th>Ilość</th>
                            <th>Płatność</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var zam in Model)
                            {
                                <tr>
                                    <td>@zam.DataZamowienia.ToString("yyyy-MM-dd")</td>
                                    <td>
                                        @zam.Ulica<br />
                                        @zam.KodPocztowy @zam.Miasto, @zam.Kraj
                                    </td>
                                    <td>
                                        @if (zam.CzyZrealizowane)
                                        {
                                            <span class="badge bg-success">Zrealizowane</span>
                                        }
                                        else if (zam.CzyAnulowane)
                                        {
                                            <span class="badge bg-danger">Anulowane</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning text-dark">Oczekujące</span>
                                        }
                                    </td>
                                    <td>@zam.Towar?.Nazwa</td>
                                    <td>@zam.Ilosc</td>
                                    <td>@zam.SposobPlatnosci</td>
                                    <td>
                                        
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center text-muted">Brak zamówień.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="mt-3 text-end">
             
            </div>
        </div>
    </div>
</div>
