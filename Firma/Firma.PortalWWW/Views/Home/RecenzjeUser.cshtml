@model IEnumerable<Firma.Data.Data.Sklep.Recenzja>

<div class="col-lg-12">
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body">
            <h4 class="fw-bold mb-3">Ostatnie recenzje</h4>
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Data</th>
                            <th>Towar</th>
                            <th>Ocena</th>
                            <th>Komentarz</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var rec in Model)
                            {
                                <tr>
                                    <td>@rec.DataDodania.ToString("yyyy-MM-dd")</td>
                                    <td>@rec.Towar?.Nazwa</td>
                                    <td>
                                        <span class="badge bg-primary">@rec.Ocena</span>
                                    </td>
                                    <td>@rec.Komentarz</td>
                                    <td>
                                      
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center text-muted">Brak recenzji.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="mt-3 text-end">
               
            </div>
        </div>
    </div>
</div>
