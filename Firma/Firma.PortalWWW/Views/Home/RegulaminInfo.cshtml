@model IEnumerable<Firma.Data.Data.CMS.Regualmin>
@foreach(var item in Model)
{
    var collapseId = $"collapse_{item.IdRegulamin}";
    <div class="accordion-item">
        <h2 class="accordion-header" id="headingGeneralTerms">
            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#@collapseId" aria-expanded="true" aria-controls="collapseGeneralTerms">
                § @item.Tytul
            </button>
        </h2>
        <div id="@collapseId" class="accordion-collapse collapse show" aria-labelledby="headingGeneralTerms" data-bs-parent="#termsAccordion">
            <div class="accordion-body">
                @item.Tresc
            </div>
        </div>
    </div>
}
