@{
    ViewData["Title"] = "Przegląd";
}

<div class="container mt-4">
    <div class="row przeglad">

        <div class="col-lg-2 col-md-12 mb-4 me-3 box-shadow sort rounded-3 bg-light p-4">
            <h5 class="fw-bold mb-3">Opcje wyszukiwania i sortowania</h5>
            <div class="mb-4">
                <label for="search" class="form-label">Szukaj produktów</label>
                <input type="text" id="search" class="form-control" placeholder="Wpisz nazwę...">
            </div>
            <div class="mb-4">
                <label for="sort" class="form-label">Sortuj według</label>
                <select id="sort" class="form-select">
                    <option value="">Wybierz...</option>
                    <option value="name">Nazwa</option>
                    <option value="price">Cena</option>
                    <option value="quantity">Ilość</option>
                </select>
            </div>
            <div class="mb-4">
                <label for="filter" class="form-label">Filtruj według</label>
                <select id="filter" class="form-select">
                    <option value="">Kategoria...</option>
                    <option value="category1">Laptopy</option>
                    <option value="category2">Smartfony</option>
                    <option value="category3">Akcesoria</option>
                </select>
            </div>
            <div class="d-flex justify-content-between">
                <button class="btn  w-100 me-2">Szukaj</button>
                <button class="btn  w-100">Wyczyść</button>
            </div>
        </div>

        <div class="col-lg-9 col-md-12">
            <div class="row g-4">

                @await Html.PartialAsync("Produkty", (IEnumerable<Firma.Data.Data.Sklep.Towar>)ViewBag.ModelProdukty)
              
                </div>
            </div>
        </div>
        </div>
        
