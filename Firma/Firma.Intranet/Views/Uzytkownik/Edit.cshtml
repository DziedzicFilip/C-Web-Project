@model Firma.Data.Data.Sklep.Uzytkownik

@{
    ViewData["Title"] = "Edytuj użytkownika";
}

<div class="mt-4">
    <h2 class="mb-4 fw-bold">Edytuj użytkownika</h2>
    <div class="card shadow-sm border-0" style="max-width: 500px; margin: 0 auto;">
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="IdUzytkownika" />

                <div class="mb-3">
                    <label asp-for="Imie" class="form-label"></label>
                    <input asp-for="Imie" class="form-control" />
                    <span asp-validation-for="Imie" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Nazwisko" class="form-label"></label>
                    <input asp-for="Nazwisko" class="form-control" />
                    <span asp-validation-for="Nazwisko" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control" type="email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Login" class="form-label"></label>
                    <input asp-for="Login" class="form-control" />
                    <span asp-validation-for="Login" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Haslo" class="form-label"></label>
                    <input asp-for="Haslo" class="form-control" type="password" autocomplete="new-password" />
                    <span asp-validation-for="Haslo" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <button type="submit" class="btn btn-success w-100 me-2">Zapisz zmiany</button>
                    <a asp-action="Index" class="btn btn-primary w-100">Powrót</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
