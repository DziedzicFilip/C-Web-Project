@model Firma.Data.Data.Sklep.Uzytkownik

@{
    ViewData["Title"] = "Szczegóły użytkownika";
}

<div class=" mt-4">
    <div class="row justify-content-center">
        <div class="col-md-7 col-lg-5">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h2 class="card-title fw-bold mb-4 text-primary">
                        Szczegóły użytkownika
                    </h2>
                    <dl class="row mb-4">
                        <dt class="col-sm-4 text-muted">Imię</dt>
                        <dd class="col-sm-8">@Model.Imie</dd>
                        <dt class="col-sm-4 text-muted">Nazwisko</dt>
                        <dd class="col-sm-8">@Model.Nazwisko</dd>
                        <dt class="col-sm-4 text-muted">Email</dt>
                        <dd class="col-sm-8">@Model.Email</dd>
                        <dt class="col-sm-4 text-muted">Login</dt>
                        <dd class="col-sm-8">@Model.Login</dd>
                        <dt class="col-sm-4 text-muted">Hasło</dt>
                        <dd class="col-sm-8 text-muted">@Model.Haslo</dd>
                    </dl>
                    <div class="d-flex justify-content-between">
                        <a asp-action="Edit" asp-route-id="@Model?.IdUzytkownika" class="btn btn-outline-primary w-100 me-2">
                            <i class="bi bi-pencil"></i> Edytuj
                        </a>
                        <a asp-action="Index" class="btn btn-primary w-100">
                            Powrót do listy
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
