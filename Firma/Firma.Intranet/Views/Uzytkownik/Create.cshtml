@model Firma.Intranet.Models.Sklep.Uzytkownik

@{
    ViewData["Title"] = "Dodaj użytkownika";
}

<div class="mt-4">
    <h2 class="mb-4 fw-bold">Dodaj użytkownika</h2>
    <div class="card shadow-sm border-0" style="max-width: 1500px; margin: 0 auto;">
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Imie" class="form-label"></label>
                    <input asp-for="Imie" class="form-control" placeholder="Wpisz imię..." />
                    <span asp-validation-for="Imie" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Nazwisko" class="form-label"></label>
                    <input asp-for="Nazwisko" class="form-control" placeholder="Wpisz nazwisko..." />
                    <span asp-validation-for="Nazwisko" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control" placeholder="Wpisz adres e-mail..." />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <button type="submit" class="btn btn-success w-100 me-2">Dodaj użytkownika</button>
                    <a asp-action="Index" class="btn btn-primary w-100">Powrót</a>
                </div>
            </form>
        </div>
    </div>
</div>
