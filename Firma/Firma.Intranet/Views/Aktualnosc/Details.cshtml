@model Firma.Data.Data.CMS.Aktualnosc

@{
    ViewData["Title"] = "Szczegóły Nagłóweka";
}


    <div class="row justify-content-center">
        <div class="col-lg-7 col-md-10">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h2 class="card-title fw-bold mb-3 text-primary">
                        @Model.Tytul
                    </h2>
                    <h5 class="card-subtitle mb-4 text-muted">
                        Tytuł linku: <span class="fw-normal">@Model.LinkTytul</span>
                    </h5>
                    <div class="mb-4">
                    <h6 class="text-secondary mb-2">Treść Nagłówek:</h6>
                        <div class="p-3 bg-light rounded border">
                            @Model.Tresc
                        </div>
                    </div>
                    <div class="mb-4">
                        <span class="badge bg-primary fs-6">Pozycja: @Model.Pozycja</span>
                    </div>
                    <div class="d-flex justify-content-between">
                        <a asp-action="Edit" asp-route-id="@Model?.IdAktualnosc" class="btn btn-outline-primary w-100 me-2">
                            <i class="bi bi-pencil"></i> Edytuj
                        </a>
                        <a asp-action="Index" class="btn btn-primary w-100">
                            Powrót do listy
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

