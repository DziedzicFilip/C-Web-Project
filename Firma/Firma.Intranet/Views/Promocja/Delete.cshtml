@model Firma.Data.Data.Sklep.Promocja

@{
    ViewData["Title"] = "Usuń promocję";
}

<div class=" mt-4">
    <div class="row justify-content-center">
        <div class="col-md-7 col-lg-5">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h2 class="fw-bold text-danger mb-3">Usuwanie promocji</h2>
                    <div class="alert alert-warning d-flex align-items-center mb-4" role="alert">
                        <i class="bi bi-exclamation-triangle-fill me-2 fs-4"></i>
                        <div>
                            <strong>Czy na pewno chcesz usunąć tę promocję?</strong><br />
                            Tej operacji nie można cofnąć!
                        </div>
                    </div>
                    <dl class="row mb-4">
                        <dt class="col-sm-4 text-muted">Nazwa</dt>
                        <dd class="col-sm-8">@Model.Nazwa</dd>
                        <dt class="col-sm-4 text-muted">Rabat</dt>
                        <dd class="col-sm-8">@Model.Rabat:P2</dd>
                        <dt class="col-sm-4 text-muted">Data rozpoczęcia</dt>
                        <dd class="col-sm-8">
                            @(Model.DataRozpoczecia)
                        </dd>
                        <dt class="col-sm-4 text-muted">Data zakończenia</dt>
                        <dd class="col-sm-8">
                            @(Model.DataZakonczenia)
                        </dd>
                        <dt class="col-sm-4 text-muted">Status</dt>
                        <dd class="col-sm-8">
                            @if (Model.CzyAktywna)
                            {
                                <span class="badge bg-success">Aktywna</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Nieaktywna</span>
                            }
                        </dd>
                    </dl>
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="IdPromocji" />
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-danger w-100 me-2">
                                <i class="bi bi-trash me-1"></i> Usuń promocję
                            </button>
                            <a asp-action="Index" class="btn btn-primary w-100">Powrót</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
