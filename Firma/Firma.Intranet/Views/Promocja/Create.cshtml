@model Firma.Intranet.Models.Sklep.Promocja

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Promocja</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nazwa" class="control-label"></label>
                <input asp-for="Nazwa" class="form-control" />
                <span asp-validation-for="Nazwa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rabat" class="control-label"></label>
                <input asp-for="Rabat" class="form-control" type="number" step="0.01" min="0" max="1" />
                <span asp-validation-for="Rabat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataRozpoczecia" class="control-label"></label>
                <input asp-for="DataRozpoczecia" class="form-control" />
                <span asp-validation-for="DataRozpoczecia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataZakonczenia" class="control-label"></label>
                <input asp-for="DataZakonczenia" class="form-control" />
                <span asp-validation-for="DataZakonczenia" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="CzyAktywna" /> @Html.DisplayNameFor(model => model.CzyAktywna)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
