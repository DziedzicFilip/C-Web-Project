@model Firma.Intranet.Models.Sklep.Promocja

@{
    ViewData["Title"] = "Dodaj promocję";
}

<div class="mt-4">
    <h2 class="mb-4 fw-bold">Dodaj promocję</h2>
    <div class="card shadow-sm border-0" style="max-width: 500px; margin: 0 auto;">
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Nazwa" class="form-label"></label>
                    <input asp-for="Nazwa" class="form-control" placeholder="Wpisz nazwę promocji..." />
                    <span asp-validation-for="Nazwa" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Rabat" class="form-label"></label>
                    <input asp-for="Rabat" class="form-control" type="number" step="0.01" min="0" max="1" placeholder="np. 0.15 dla 15%" />
                    <span asp-validation-for="Rabat" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="DataRozpoczecia" class="form-label"></label>
                    <input asp-for="DataRozpoczecia" class="form-control" type="date" />
                    <span asp-validation-for="DataRozpoczecia" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="DataZakonczenia" class="form-label"></label>
                    <input asp-for="DataZakonczenia" class="form-control" type="date" />
                    <span asp-validation-for="DataZakonczenia" class="text-danger"></span>
                </div>

                <div class="form-check mb-3">
                    <input class="form-check-input" asp-for="CzyAktywna" />
                    <label class="form-check-label" asp-for="CzyAktywna">
                        @Html.DisplayNameFor(model => model.CzyAktywna)
                    </label>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <button type="submit" class="btn btn-success w-100 me-2">Dodaj promocję</button>
                    <a asp-action="Index" class="btn btn-primary w-100">Powrót</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
