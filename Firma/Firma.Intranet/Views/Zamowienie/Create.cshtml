@model Firma.Intranet.Models.Sklep.Zamowienie

@{
    ViewData["Title"] = "Dodaj zamówienie";
}

<div class="mt-4">
   
    <div class="card shadow-sm border-0" style="max-width: 600px; margin: 0 auto;">
        <h2 class="mb-4 fw-bold">Dodaj nowe zamówienie</h2>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="DataZamowienia" class="form-label"></label>
                    <input asp-for="DataZamowienia" class="form-control" type="date" />
                    <span asp-validation-for="DataZamowienia" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="IdUzytkownika" class="form-label"></label>
                    <select asp-for="IdUzytkownika" class="form-select" asp-items="ViewBag.IdUzytkownika"></select>
                    <span asp-validation-for="IdUzytkownika" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Ulica" class="form-label"></label>
                    <input asp-for="Ulica" class="form-control" placeholder="Wpisz ulicę..." />
                    <span asp-validation-for="Ulica" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Miasto" class="form-label"></label>
                    <input asp-for="Miasto" class="form-control" placeholder="Wpisz miasto..." />
                    <span asp-validation-for="Miasto" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="KodPocztowy" class="form-label"></label>
                    <input asp-for="KodPocztowy" class="form-control" placeholder="Wpisz kod pocztowy..." />
                    <span asp-validation-for="KodPocztowy" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Kraj" class="form-label"></label>
                    <input asp-for="Kraj" class="form-control" placeholder="Wpisz kraj..." />
                    <span asp-validation-for="Kraj" class="text-danger"></span>
                </div>

                <div class="form-check mb-3">
                    <input class="form-check-input" asp-for="CzyZrealizowane" />
                    <label class="form-check-label" asp-for="CzyZrealizowane">
                        @Html.DisplayNameFor(model => model.CzyZrealizowane)
                    </label>
                </div>

                <div class="form-check mb-3">
                    <input class="form-check-input" asp-for="CzyAnulowane" />
                    <label class="form-check-label" asp-for="CzyAnulowane">
                        @Html.DisplayNameFor(model => model.CzyAnulowane)
                    </label>
                </div>

                <div class="mb-3">
                    <label asp-for="SposobPlatnosci" class="form-label"></label>
                    <input asp-for="SposobPlatnosci" class="form-control" placeholder="Wpisz sposób płatności..." />
                    <span asp-validation-for="SposobPlatnosci" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="IdTowaru" class="form-label"></label>
                    <select asp-for="IdTowaru" class="form-select" asp-items="ViewBag.IdTowaru"></select>
                    <span asp-validation-for="IdTowaru" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Ilosc" class="form-label"></label>
                    <input asp-for="Ilosc" class="form-control" placeholder="Wpisz ilość..." />
                    <span asp-validation-for="Ilosc" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <button type="submit" class="btn btn-success w-100 me-2">Dodaj zamówienie</button>
                    <a asp-action="Index" class="btn btn-primary w-100">Powrót</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
