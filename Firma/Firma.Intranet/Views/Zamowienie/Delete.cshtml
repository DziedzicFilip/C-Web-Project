@model Firma.Intranet.Models.Sklep.Zamowienie

@{
    ViewData["Title"] = "Usuń zamówienie";
}

<div class=" mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-7 col-md-10">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h2 class="fw-bold text-danger mb-3">Usuwanie zamówienia</h2>
                    <div class="alert alert-warning d-flex align-items-center mb-4" role="alert">
                        <i class="bi bi-exclamation-triangle-fill me-2 fs-4"></i>
                        <div>
                            <strong>Czy na pewno chcesz usunąć to zamówienie?</strong><br />
                            Tej operacji nie można cofnąć!
                        </div>
                    </div>
                    <dl class="row mb-4">
                        <dt class="col-sm-4 text-muted">Data zamówienia</dt>
                        <dd class="col-sm-8">@Model.DataZamowienia.ToString("yyyy-MM-dd")</dd>
                        <dt class="col-sm-4 text-muted">Klient (Email)</dt>
                        <dd class="col-sm-8">@Model.Uzytkownik?.Email</dd>
                        <dt class="col-sm-4 text-muted">Ulica</dt>
                        <dd class="col-sm-8">@Model.Ulica</dd>
                        <dt class="col-sm-4 text-muted">Miasto</dt>
                        <dd class="col-sm-8">@Model.Miasto</dd>
                        <dt class="col-sm-4 text-muted">Kod pocztowy</dt>
                        <dd class="col-sm-8">@Model.KodPocztowy</dd>
                        <dt class="col-sm-4 text-muted">Kraj</dt>
                        <dd class="col-sm-8">@Model.Kraj</dd>
                        <dt class="col-sm-4 text-muted">Sposób płatności</dt>
                        <dd class="col-sm-8">@Model.SposobPlatnosci</dd>
                        <dt class="col-sm-4 text-muted">Status</dt>
                        <dd class="col-sm-8">
                            @if (Model.CzyAnulowane)
                            {
                                <span class="badge bg-danger">Anulowane</span>
                            }
                            else if (Model.CzyZrealizowane)
                            {
                                <span class="badge bg-success">Zrealizowane</span>
                            }
                            else
                            {
                                <span class="badge bg-warning text-dark">Oczekujące</span>
                            }
                        </dd>
                        <dt class="col-sm-4 text-muted">Kod towaru</dt>
                        <dd class="col-sm-8">@Model.Towar?.Kod</dd>
                        <dt class="col-sm-4 text-muted">Ilość</dt>
                        <dd class="col-sm-8">@Model.Ilosc</dd>
                    </dl>
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="IdZamowienia" />
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-danger w-100 me-2">
                                <i class="bi bi-trash me-1"></i> Usuń zamówienie
                            </button>
                            <a asp-action="Index" class="btn btn-primary w-100">Powrót</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
