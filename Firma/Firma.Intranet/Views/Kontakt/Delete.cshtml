@model Firma.Data.Data.CMS.Kontakt

@{
    ViewData["Title"] = "Usuń kontakt";
}

<div class="mt-4">
    <div class="row justify-content-center">
        <div class="col-md-7 col-lg-5">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h2 class="fw-bold text-danger mb-3">Usuwanie kontaktu</h2>
                    <div class="alert alert-warning d-flex align-items-center mb-4" role="alert">
                        <i class="bi bi-exclamation-triangle-fill me-2 fs-4"></i>
                        <div>
                            <strong>Czy na pewno chcesz usunąć ten kontakt?</strong><br />
                            Tej operacji nie można cofnąć!
                        </div>
                    </div>
                    <dl class="row mb-4">
                        <dt class="col-sm-4 text-muted">Biuro</dt>
                        <dd class="col-sm-8">@Model.Biuro</dd>
                        <dt class="col-sm-4 text-muted">Adres</dt>
                        <dd class="col-sm-8">@Model.Adres</dd>
                        <dt class="col-sm-4 text-muted">Kod pocztowy</dt>
                        <dd class="col-sm-8">@Model.KodPocztowy</dd>
                        <dt class="col-sm-4 text-muted">Miasto</dt>
                        <dd class="col-sm-8">@Model.Miasto</dd>
                        <dt class="col-sm-4 text-muted">Telefon</dt>
                        <dd class="col-sm-8">@Model.Telefon</dd>
                        <dt class="col-sm-4 text-muted">Email</dt>
                        <dd class="col-sm-8">@Model.Email</dd>
                        <dt class="col-sm-4 text-muted">Godziny pracy</dt>
                        <dd class="col-sm-8">@Model.GodzinyPracy</dd>
                    </dl>
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="IdKonakt" />
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-danger w-100 me-2">
                                <i class="bi bi-trash me-1"></i> Usuń kontakt
                            </button>
                            <a asp-action="Index" class="btn btn-primary w-100">Powrót</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
