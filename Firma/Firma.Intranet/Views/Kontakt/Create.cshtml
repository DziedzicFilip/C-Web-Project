@model Firma.Data.Data.CMS.Kontakt

@{
    ViewData["Title"] = "Dodaj kontakt";
}

<div class="mt-4">
    <h2 class="mb-4 fw-bold">Dodaj kontakt</h2>
    <div class="card shadow-sm border-0" style="max-width: 550px; margin: 0 auto;">
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Biuro" class="form-label"></label>
                    <input asp-for="Biuro" class="form-control" />
                    <span asp-validation-for="Biuro" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Adres" class="form-label"></label>
                    <input asp-for="Adres" class="form-control" />
                    <span asp-validation-for="Adres" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="KodPocztowy" class="form-label"></label>
                        <input asp-for="KodPocztowy" class="form-control" />
                        <span asp-validation-for="KodPocztowy" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="Miasto" class="form-label"></label>
                        <input asp-for="Miasto" class="form-control" />
                        <span asp-validation-for="Miasto" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Telefon" class="form-label"></label>
                    <input asp-for="Telefon" class="form-control" />
                    <span asp-validation-for="Telefon" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control" type="email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="GodzinyPracy" class="form-label"></label>
                    <input asp-for="GodzinyPracy" class="form-control" />
                    <span asp-validation-for="GodzinyPracy" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <button type="submit" class="btn btn-success w-100 me-2">Dodaj kontakt</button>
                    <a asp-action="Index" class="btn btn-primary w-100">Powrót</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
