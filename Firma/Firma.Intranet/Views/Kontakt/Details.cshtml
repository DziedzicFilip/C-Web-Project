@model Firma.Data.Data.CMS.Kontakt

@{
    ViewData["Title"] = "Szczegóły kontaktu";
}

<div class=" mt-4">
    <div class="row justify-content-center">
        <div class="col-md-7 col-lg-5">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h2 class="card-title fw-bold mb-4 text-primary">
                        Szczegóły kontaktu
                    </h2>
                    <dl class="row mb-4">
                        <dt class="col-sm-4 text-muted">Biuro</dt>
                        <dd class="col-sm-8">@Model.Biuro</dd>
                        <dt class="col-sm-4 text-muted">Adres</dt>
                        <dd class="col-sm-8">@Model.Adres</dd>
                        <dt class="col-sm-4 text-muted">Kod pocztowy</dt>
                        <dd class="col-sm-8">@Model.KodPocztowy</dd>
                        <dt class="col-sm-4 text-muted">Miasto</dt>
                        <dd class="col-sm-8">@Model.Miasto</dd>
                        <dt class="col-sm-4 text-muted">Telefon</dt>
                        <dd class="col-sm-8">@Model.Telefon</dd>
                        <dt class="col-sm-4 text-muted">Email</dt>
                        <dd class="col-sm-8">@Model.Email</dd>
                        <dt class="col-sm-4 text-muted">Godziny pracy</dt>
                        <dd class="col-sm-8">@Model.GodzinyPracy</dd>
                    </dl>
                    <div class="d-flex justify-content-between">
                        <a asp-action="Edit" asp-route-id="@Model?.IdKonakt" class="btn btn-outline-primary w-100 me-2">
                            <i class="bi bi-pencil"></i> Edytuj
                        </a>
                        <a asp-action="Index" class="btn btn-primary w-100">
                            Powrót do listy
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
