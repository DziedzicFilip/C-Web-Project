@{
    ViewData["Title"] = "Magazyn";
}

<div class=" mt-4">
    <div class="row">
        <div class="col-md-3  box-shadow">
            <div class="sticky-top" style="top: 20px;">
                <h5>Opcje wyszukiwania i sortowania</h5>
                <div class="mb-4">
                    <label for="search" class="form-label">Szukaj produktów</label>
                    <input type="text" id="search" class="form-control" placeholder="Szukaj produktów...">
                </div>
                <div class="mb-4">
                    <label for="sort" class="form-label">Sortuj według</label>
                    <select id="sort" class="form-control">
                        <option>Sortuj według</option>
                        <option>Nazwa</option>
                        <option>Cena</option>
                        <option>Ilość</option>
                    </select>
                </div>
                <div class="mb-4">
                    <label for="filter" class="form-label">Filtruj według</label>
                    <select id="filter" class="form-control">
                        <option>Filtruj według</option>
                        <option>Kategoria 1</option>
                        <option>Kategoria 2</option>
                        <option>Kategoria 3</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="col-md-9">
            <div class="row">
                <div class="col-md-6 mb-4">
                    <div class="card">
                        <img src="~/images/product1.jpg" class="card-img-top" alt="Product 1">
                        <div class="card-body">
                            <h5 class="card-title">Produkt 1</h5>
                            <p class="card-text">Opis produktu 1</p>
                            <p class="card-text">Ilość: 10</p>
                            <p class="card-text">Cena: $100</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 mb-4">
                    <div class="card">
                        <img src="~/images/product2.jpg" class="card-img-top" alt="Product 2">
                        <div class="card-body">
                            <h5 class="card-title">Produkt 2</h5>
                            <p class="card-text">Opis produktu 2</p>
                            <p class="card-text">Ilość: 5</p>
                            <p class="card-text">Cena: $200</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 mb-4">
                    <div class="card">
                        <img src="~/images/product3.jpg" class="card-img-top" alt="Product 3">
                        <div class="card-body">
                            <h5 class="card-title">Produkt 3</h5>
                            <p class="card-text">Opis produktu 3</p>
                            <p class="card-text">Ilość: 8</p>
                            <p class="card-text">Cena: $150</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 mb-4">
                    <div class="card">
                        <img src="~/images/product4.jpg" class="card-img-top" alt="Product 4">
                        <div class="card-body">
                            <h5 class="card-title">Produkt 4</h5>
                            <p class="card-text">Opis produktu 4</p>
                            <p class="card-text">Ilość: 12</p>
                            <p class="card-text">Cena: $120</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
