@{
    ViewData["Title"] = "Dodaj Produkt";
}

<div class="mt-4">
    <h2 class="mb-4 fw-bold">Dodaj Nowy Produkt</h2>
    <div class="card shadow-sm border-0">
        <div class="card-body">
            <form >
                <div class="mb-3">
                    <label for="productName" class="form-label">Nazwa produktu</label>
                    <input type="text" id="productName" name="productName" class="form-control" placeholder="Wpisz nazwę produktu..." required>
                </div>

         
                <div class="mb-3">
                    <label for="productDescription" class="form-label">Opis produktu</label>
                    <textarea id="productDescription" name="productDescription" class="form-control" rows="4" placeholder="Wpisz opis produktu..." required></textarea>
                </div>

               
                <div class="mb-3">
                    <label for="productQuantity" class="form-label">Ilość</label>
                    <input type="number" id="productQuantity" name="productQuantity" class="form-control" placeholder="Wpisz ilość..." min="1" required>
                </div>

       
                <div class="mb-3">
                    <label for="productPrice" class="form-label">Cena </label>
                    <input type="number" id="productPrice" name="productPrice" class="form-control" placeholder="Wpisz cenę..." step=".01" min="0.01" required>
                </div>

        
                <div class="mb-3">
                    <label for="productCategory" class="form-label">Kategoria</label>
                    <select id="productCategory" name="productCategory" class="form-select" required>
                        <option  disabled selected>Wybierz kategorię...</option>
                        <option >Elektronika</option>
                        <option >Inne</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label for="productImage" class="form-label">Zdjęcie produktu</label>
                    <input type="file" id="productImage" name="productImage" class="form-control">
                </div>


                <div class="d-flex justify-content-between mt-4">
                    <button type="submit" class="btn btn-primary w-100 me-2">Dodaj Produkt</button>
                    <button type="reset" class="btn btn-outline-secondary w-100">Wyczyść Formularz</button>
                </div>
            </form>
        </div>
    </div>
</div>
