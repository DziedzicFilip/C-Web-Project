@model Firma.Data.Data.Sklep.Rodzaj

@{
    ViewData["Title"] = "Edytuj rodzaj";
}

<div class="mt-4">
    <h2 class="mb-4 fw-bold">Edytuj rodzaj</h2>
    <div class="card shadow-sm border-0" style="max-width: 400px; margin: 0 auto;">
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="IdRodzaju" />
                <div class="mb-3">
                    <label asp-for="Nazwa" class="form-label"></label>
                    <input asp-for="Nazwa" class="form-control" placeholder="Wpisz nazwę rodzaju..." />
                    <span asp-validation-for="Nazwa" class="text-danger"></span>
                </div>
                <div class="d-flex justify-content-between mt-4">
                    <button type="submit" class="btn btn-success w-100 me-2">Zapisz zmiany</button>
                    <a asp-action="Index" class="btn btn-primary w-100">Powrót</a>
                </div>
            </form>
        </div>
    </div>
</div>
