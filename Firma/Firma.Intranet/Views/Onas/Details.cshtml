@model Firma.Data.Data.CMS.Onas

@{
    ViewData["Title"] = "Szczegóły wpisu O nas";
}

<div class=" mt-4">
    <div class="row justify-content-center">
        <div class="col-md-7 col-lg-5">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h2 class="card-title fw-bold mb-4 text-primary">
                        Szczegóły wpisu "O nas"
                    </h2>
                    <dl class="row mb-4">
                        <dt class="col-sm-4 text-muted">Nazwa</dt>
                        <dd class="col-sm-8">@Model.Name</dd>
                        <dt class="col-sm-4 text-muted">Opis</dt>
                        <dd class="col-sm-8">
                            <div class="bg-light rounded p-3" style="white-space: pre-line;">
                                @Model.Description
                            </div>
                        </dd>
                    </dl>
                    <div class="d-flex justify-content-between">
                        <a asp-action="Edit" asp-route-id="@Model?.IdOnas" class="btn btn-outline-primary w-100 me-2">
                            <i class="bi bi-pencil"></i> Edytuj
                        </a>
                        <a asp-action="Index" class="btn btn-primary w-100">
                            Powrót do listy
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
