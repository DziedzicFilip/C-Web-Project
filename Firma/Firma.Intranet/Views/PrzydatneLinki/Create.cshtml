@model Firma.Data.Data.CMS.PrzydatneLinki

@{
    ViewData["Title"] = "Dodaj link";
}

<div class="mt-4">
    <h2 class="mb-4 fw-bold">Dodaj przydatny link</h2>
    <div class="card shadow-sm border-0" style="max-width: 500px; margin: 0 auto;">
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Tytul" class="form-label"></label>
                    <input asp-for="Tytul" class="form-control" />
                    <span asp-validation-for="Tytul" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Link" class="form-label"></label>
                    <input asp-for="Link" class="form-control" type="url" placeholder="https://..." />
                    <span asp-validation-for="Link" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <button type="submit" class="btn btn-success w-100 me-2">Dodaj link</button>
                    <a asp-action="Index" class="btn btn-primary w-100">Powrót</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
