@model IEnumerable<Firma.Intranet.Models.Sklep.Recenzja>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Ocena)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Komentarz)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataDodania)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Towar)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Uzytkownik)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Ocena)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Komentarz)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataDodania)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Towar.FotoUrl)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Uzytkownik.Email)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdRecenzji">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdRecenzji">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdRecenzji">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
