@model Firma.Data.Data.Sklep.Recenzja

@{
    ViewData["Title"] = "Edytuj recenzję";
}

<div class="mt-4">
    <h2 class="mb-4 fw-bold">Edytuj recenzję</h2>
    <div class="card shadow-sm border-0" style="max-width: 500px; margin: 0 auto;">
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="IdRecenzji" />

                <div class="mb-3">
                    <label asp-for="Ocena" class="form-label"></label>
                    <input asp-for="Ocena" class="form-control" placeholder="Podaj ocenę (1-5)" min="1" max="5" type="number" />
                    <span asp-validation-for="Ocena" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Komentarz" class="form-label"></label>
                    <textarea asp-for="Komentarz" class="form-control" rows="4" placeholder="Wpisz komentarz..."></textarea>
                    <span asp-validation-for="Komentarz" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="DataDodania" class="form-label"></label>
                    <input asp-for="DataDodania" class="form-control" type="date" />
                    <span asp-validation-for="DataDodania" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="IdTowaru" class="form-label"></label>
                    <select asp-for="IdTowaru" class="form-select" asp-items="ViewBag.IdTowaru"></select>
                    <span asp-validation-for="IdTowaru" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="IdUzytkownika" class="form-label"></label>
                    <select asp-for="IdUzytkownika" class="form-select" asp-items="ViewBag.IdUzytkownika"></select>
                    <span asp-validation-for="IdUzytkownika" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <button type="submit" class="btn btn-success w-100 me-2">Zapisz zmiany</button>
                    <a asp-action="Index" class="btn btn-primary w-100">Powrót</a>
                </div>
            </form>
        </div>
    </div>
</div>
