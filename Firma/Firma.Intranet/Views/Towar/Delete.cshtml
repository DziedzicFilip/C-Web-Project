@model Firma.Data.Data.Sklep.Towar

@{
    ViewData["Title"] = "Usuń produkt";
}

<div class="r mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-7">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h2 class="fw-bold text-danger mb-3">Usuwanie produktu</h2>
                    <div class="alert alert-warning d-flex align-items-center mb-4" role="alert">
                        <i class="bi bi-exclamation-triangle-fill me-2 fs-4"></i>
                        <div>
                            <strong>Czy na pewno chcesz usunąć ten produkt?</strong><br />
                            Tej operacji nie można cofnąć!
                        </div>
                    </div>
                    <div class="row mb-4">
                        <div class="col-md-4 text-center mb-3 mb-md-0">
                            @if (!string.IsNullOrEmpty(Model.FotoUrl))
                            {
                                <img src="@Model.FotoUrl" alt="Zdjęcie produktu" class="img-fluid rounded shadow-sm" style="max-height: 180px; object-fit: contain;" />
                            }
                            else
                            {
                                <span class="text-muted">Brak zdjęcia</span>
                            }
                        </div>
                        <div class="col-md-8">
                            <dl class="row mb-0">
                                <dt class="col-sm-5 text-muted">Nazwa</dt>
                                <dd class="col-sm-7">@Model.Nazwa</dd>
                                <dt class="col-sm-5 text-muted">Kod</dt>
                                <dd class="col-sm-7">@Model.Kod</dd>
                                <dt class="col-sm-5 text-muted">Cena</dt>
                                <dd class="col-sm-7">@Model.Cena.ToString("C")</dd>
                                <dt class="col-sm-5 text-muted">Ilość</dt>
                                <dd class="col-sm-7">@Model.Ilosc</dd>
                                <dt class="col-sm-5 text-muted">Rodzaj</dt>
                                <dd class="col-sm-7">@Model.Rodzaj?.Nazwa</dd>
                                <dt class="col-sm-5 text-muted">Opis</dt>
                                <dd class="col-sm-7">@Model.Opis</dd>
                                <dt class="col-sm-5 text-muted">Waga</dt>
                                <dd class="col-sm-7">@Model.Waga</dd>
                                <dt class="col-sm-5 text-muted">Wymiary</dt>
                                <dd class="col-sm-7">@Model.Wymiary</dd>
                                <dt class="col-sm-5 text-muted">Kolor</dt>
                                <dd class="col-sm-7">@Model.Kolor</dd>
                                <dt class="col-sm-5 text-muted">Materiał</dt>
                                <dd class="col-sm-7">@Model.Material</dd>
                                <dt class="col-sm-5 text-muted">Producent</dt>
                                <dd class="col-sm-7">@Model.Producent</dd>
                                <dt class="col-sm-5 text-muted">Kraj produkcji</dt>
                                <dd class="col-sm-7">@Model.KrajProdukcji</dd>
                                <dt class="col-sm-5 text-muted">Gwarancja</dt>
                                <dd class="col-sm-7">@Model.GwarancjaMiesiace mies.</dd>
                                <dt class="col-sm-5 text-muted">Model</dt>
                                <dd class="col-sm-7">@Model.Model</dd>
                                <dt class="col-sm-5 text-muted">Stan</dt>
                                <dd class="col-sm-7">@Model.Stan</dd>
                            </dl>
                        </div>
                    </div>
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="idTowar" />
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-danger w-100 me-2">
                                <i class="bi bi-trash me-1"></i> Usuń produkt
                            </button>
                            <a asp-action="Index" class="btn btn-primary w-100">Powrót</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
