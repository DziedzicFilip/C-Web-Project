@model Firma.Data.Data.Sklep.Towar

@{
    ViewData["Title"] = "Usuń Produkt";
}

<div class="mt-4">
    <h2 class="mb-4 fw-bold text-danger">Usuwanie Produktu</h2>
    <div class="card shadow-sm border-0">
        <div class="card-body">
            <div class="alert alert-warning mb-4 d-flex align-items-center" role="alert">
                <i class="bi bi-exclamation-triangle-fill me-2 fs-4"></i>
                <div>
                    <strong>Czy na pewno chcesz usunąć ten produkt?</strong><br />
                    Tej operacji nie można cofnąć!
                </div>
            </div>
            <div class="row mb-4">
                <div class="col-md-4 text-center">
                    <img src="@(!string.IsNullOrEmpty(Model.FotoUrl) ? Model.FotoUrl : "~/images/Products/default.png")"
                         alt="Zdjęcie produktu"
                         class="img-fluid rounded shadow-sm mb-3"
                         style="max-height: 180px; object-fit: contain;" />
                </div>
                <div class="col-md-8">
                    <dl class="row mb-0">
                        <dt class="col-sm-4 text-muted">Nazwa</dt>
                        <dd class="col-sm-8">@Model.Nazwa</dd>
                        <dt class="col-sm-4 text-muted">Kod</dt>
                        <dd class="col-sm-8">@Model.Kod</dd>
                        <dt class="col-sm-4 text-muted">Cena</dt>
                        <dd class="col-sm-8">@Model.Cena.ToString("C")</dd>
                        <dt class="col-sm-4 text-muted">Opis</dt>
                        <dd class="col-sm-8">@Model.Opis</dd>
                        <dt class="col-sm-4 text-muted">Kategoria</dt>
                        <dd class="col-sm-8">@Model.Rodzaj?.Nazwa</dd>
                    </dl>
                </div>
            </div>
            <form asp-action="Delete">
                <input type="hidden" asp-for="idTowar" />
                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-danger w-100 me-2">
                        <i class="bi bi-trash me-1"></i> Usuń Produkt
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary w-100">
                        Anuluj
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
