@model Firma.Data.Data.Sklep.Towar

@{
    ViewData["Title"] = "Edytuj Produkt";
}

<div class="mt-4">
    <h2 class="mb-4 fw-bold">Edytuj Produkt</h2>
    <div class="card shadow-sm border-0">
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="idTowar" />

                <div class="mb-3">
                    <label asp-for="Nazwa" class="form-label"></label>
                    <input asp-for="Nazwa" class="form-control" placeholder="Wpisz nazwę produktu..." />
                    <span asp-validation-for="Nazwa" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Opis" class="form-label"></label>
                    <textarea asp-for="Opis" class="form-control" rows="4" placeholder="Wpisz opis produktu..."></textarea>
                    <span asp-validation-for="Opis" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Kod" class="form-label"></label>
                    <input asp-for="Kod" class="form-control" placeholder="Wpisz kod produktu..." />
                    <span asp-validation-for="Kod" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Cena" class="form-label"></label>
                    <input asp-for="Cena" class="form-control" placeholder="Wpisz cenę..." step=".01" min="0.01" />
                    <span asp-validation-for="Cena" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="idRodzaju" class="form-label"></label>
                    <select asp-for="idRodzaju" class="form-select" asp-items="ViewBag.idRodzaju">
                        <option disabled selected>Wybierz kategorię...</option>
                    </select>
                    <span asp-validation-for="idRodzaju" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="FotoUrl" class="form-label">Link do zdjęcia produktu</label>
                    <input asp-for="FotoUrl" class="form-control" placeholder="Wklej URL zdjęcia lub zostaw puste..." />
                    <span asp-validation-for="FotoUrl" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <button type="submit" class="btn btn-primary w-100 me-2">Zapisz zmiany</button>
                    <a asp-action="Index" class="btn btn-outline-secondary w-100">Anuluj</a>
                </div>
            </form>
        </div>
    </div>
</div>
