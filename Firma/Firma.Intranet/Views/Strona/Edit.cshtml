@model Firma.Data.Data.CMS.Strona

@{
    ViewData["Title"] = "Edytuj stronę";
}

<div class="mt-4">
    <h2 class="mb-4 fw-bold">Edytuj stronę</h2>
    <div class="card shadow-sm border-0">
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="IdStrony" />

                <div class="mb-3">
                    <label asp-for="LinkTytul" class="form-label"></label>
                    <input asp-for="LinkTytul" class="form-control" placeholder="Wpisz tytuł linku..." />
                    <span asp-validation-for="LinkTytul" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Tytul" class="form-label"></label>
                    <input asp-for="Tytul" class="form-control" placeholder="Wpisz tytuł strony..." />
                    <span asp-validation-for="Tytul" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Tres" class="form-label"></label>
                    <textarea asp-for="Tres" class="form-control" rows="6" placeholder="Wpisz treść strony..."></textarea>
                    <span asp-validation-for="Tres" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Pozycja" class="form-label"></label>
                    <input asp-for="Pozycja" class="form-control" placeholder="Podaj pozycję (np. 1, 2, 3...)" />
                    <span asp-validation-for="Pozycja" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <button type="submit" class="btn btn-success w-100 me-2">Zapisz zmiany</button>
                    <a asp-action="Index" class="btn btn-primary w-100">Powrót</a>
                </div>
            </form>
        </div>
    </div>
</div>
