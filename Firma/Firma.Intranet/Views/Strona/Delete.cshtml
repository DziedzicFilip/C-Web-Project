@model Firma.Intranet.Models.CMS.Strona

@{
    ViewData["Title"] = "Usuń stronę";
}


    <div class="row justify-content-center">
        <div class="col-lg-7 col-md-10">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h2 class="fw-bold text-danger mb-3">Usuwanie strony</h2>
                    <div class="alert alert-warning d-flex align-items-center mb-4" role="alert">
                        <i class="bi bi-exclamation-triangle-fill me-2 fs-4"></i>
                        <div>
                            <strong>Czy na pewno chcesz usunąć tę stronę?</strong><br />
                            Tej operacji nie można cofnąć!
                        </div>
                    </div>
                    <dl class="row mb-4">
                        <dt class="col-sm-3 text-muted">Tytuł linku</dt>
                        <dd class="col-sm-9">@Model.LinkTytul</dd>
                        <dt class="col-sm-3 text-muted">Tytuł</dt>
                        <dd class="col-sm-9">@Model.Tytul</dd>
                        <dt class="col-sm-3 text-muted">Treść</dt>
                        <dd class="col-sm-9">
                            <div class="bg-light rounded p-2 border" style="max-height: 180px; overflow:auto;">
                                @Model.Tres
                            </div>
                        </dd>
                        <dt class="col-sm-3 text-muted">Pozycja</dt>
                        <dd class="col-sm-9">
                            <span class="badge bg-primary">@Model.Pozycja</span>
                        </dd>
                    </dl>
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="IdStrony" />
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-danger w-100 me-2">
                                <i class="bi bi-trash me-1"></i> Usuń stronę
                            </button>
                            <a asp-action="Index" class="btn btn-primary w-100">Powrót</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

